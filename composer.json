{
    "name": "igorgoroun/ftns",
    "description": "Server-side package for FTNW point system",
    "license": "GPL-2.0",
    "type": "project",
    "authors": [
        {
            "name": "Igor Goroun",
            "email": "igor.goroun@gmail.com"
        }
    ],
    "require": {
        "php": "^5.5|^7.0",
        "symfony/console": "^3.1",
        "symfony/finder": "^3.1",
        "doctrine/dbal": "*",
        "psr/log": "^1.0",
        "symfony/yaml": "^3.1",
        "symfony/process": "^3.1"
    },
    "autoload": {
        "psr-4": {
            "": "src/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "chmod a+x ftns ftns-toss",
            "mv ftns ../../../",
            "cp etc/ftns.yml.default etc/ftns.yml",
            "cp etc/areas.yml.default etc/areas.yml",
            "cp etc/points.yml.default etc/points.yml",
            "mv ftns-toss ../../../",
            "mv etc ../../../"
        ],
        "post-update-cmd": [
            "chmod a+x ftns",
            "mv --force ftns ../../../"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.2.x-dev"
        }
    }
}
